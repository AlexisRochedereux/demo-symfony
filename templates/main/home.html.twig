{% extends 'base.html.twig' %}

{% block body %}

<h1>Coucou</h1>
    {# ma zone de commentaire
    commentaire sur plusieurs lignes #}

    {% set nom = "Laurent" %}

    <h1>{{ nom | upper }} {{ nom | length }}</h1>

    {# création d'un tableau #}
    {% set colors = ["blue", "red", "brown", "green", "yellow"] %}

    <div>Il y a {{ colors | length }} couleur{{ colors | length > 1 ? "s" : "" }} dans mon tableau</div>

    {# affiche le tableau sur une seule ligne
    avec chaque élément séparé par - #}
    <div>{{ colors | join('<br>') | raw }}</div>

    {% for c in colors %}
        <div style="background-color: {{ c }}">{{ c }}</div>
        <div>{{ loop.index }}</div>
        <div>{{ loop.last }}</div>
        {% if loop.last %}
            <div>Dernière itération</div>
        {% endif %}

    {% endfor %}

    {% set film = {
        title : "Ca",
        year : 2017,
        realisateur : "Scorsese"
    } %}
    <p>{{ film.title }}</p>

    {% for key, val in film %}
        <div>{{ key }} = {{ val }}</div>
    {% endfor %}

    {% set actors = [] %}

    {% for a in actors %}
        <div>{{ a }}</div>
    {% else %}
        <div>Pas d'acteur</div>
    {% endfor %}

    {# filtre sur les dates #}
<div>Aujourd'hui, nous sommes le {{ "now" | date('d/m/Y H:i') }}</div>
<div>Aujourd'hui, nous sommes dans l'année {{ "now" | date('Y') }}</div>
<div>Dans un an, nous serons {{ "+1 year" | date('d/m/Y') }}</div>

{% endblock %}

{% block title %}{{ parent()}} | home{% endblock %}